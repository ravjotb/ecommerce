<% layout('layouts/boilerplate') -%>

<h1>New Post!</h1>

<form class="" action="/posts" method="post" enctype="multipart/form-data">
  <div class="">
    <input type="text" name="post[title]" value="" placeholder="Title">
  </div>
  <div class="">
    <input type="number" name="post[price]" value="" step=".01" placeholder="Price">
  </div>
  <div class="">
    <input type="file" name="images" accept= "images/*" multiple>
  </div>
  <div class="">
    <textarea name="post[description]" placeholder="Description"></textarea>
  </div>
  <div class="">
      <input type="text" name="post[location]" value="" placeholder="Location">
  </div>
  <input type="submit">

</form>
