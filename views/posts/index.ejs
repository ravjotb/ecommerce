<h1> Posts Index </h1>
<div id="map">

</div>
<% include ../partials/paginate %>
<% posts.docs.forEach(function(post){ %>

  <div class="">
    <h2><%= post.title %></h2>
    <div>Price: <%= post.price %> </div>
    <div class=""><%= post.description %></div>
    <div class=""><%= post.location %></div>
    <div class=""><a href="/posts/<%=post.id%>">View More</a></div>
  </div>
<%}); %>

