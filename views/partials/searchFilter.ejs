<form class="" action="/posts" method="get">
  <fieldset>
    <legend>Search</legend>
    <label for="search">Search</label>
    <input type="text" name="search" id="search" placeholder="Search" value="<%=query.search%>">
  </fieldset>

  <fieldset>
    <div>
      <label for="location">Location</label>
      <input type="text" id="location" name="location" value="<%= query.location%>" placeholder="Address or Zipcode">
      <br><small> <a href="#" id="find-me">Use my location</a> </small><br>
      <p id="status"></p>
    </div>

    <legend>Distance (miles)</legend>
    <div class="">
      <label for="distance25">25</label>
      <input type="radio" name="distance" id="distance25" value="25"
      <%= query.distance==='25' ? 'checked' : '' %>>
    </div>

    <div class="">
      <label for="distance50">50</label>
      <input type="radio" name="distance" id="distance50" value="50"
      <%= query.distance==='50' ? 'checked' : '' %>>
    </div>

    <div class="">
      <label for="distance100">100</label>
      <input type="radio" name="distance" id="distance100" value="100"
      <%= query.distance==='100' ? 'checked' : '' %>>
    </div>

    <div class="">
      <a href="#" id="clear-distance">clear</a>
    </div>
  </fieldset>

  <fieldset>
    <legend>Price</legend>
    <label for="min">Min</label>
    <input type="number" id="min" name="price[min]"
    min="0" max="10000" step="1" placeholder="Min"
    value="<%=query.price? query.price.min : ''%>">

    <label for="max">Max</label>
    <input type="number" id="max" name="price[max]"
    max="10000" min="0" step="1" placeholder="Max"
    value="<%=query.price? query.price.max : ''%>">
  </fieldset>

  <fieldset>
    <legend>Rating</legend>

    <input type="checkbox" name="avgRating[]" id="zero-stars"value="0"
    <%= query.avgRating && query.avgRating.includes('0')? 'checked' : ''%>>
    <label for="zero-stars">0 stars</label><br>

    <input type="checkbox" name="avgRating[]" id="one-star"value="1"
    <%= query.avgRating && query.avgRating.includes('1')? 'checked' : ''%>>
    <label for="one-star">1 star</label><br>

    <input type="checkbox" name="avgRating[]" id="two-stars"value="2"
    <%= query.avgRating && query.avgRating.includes('2')? 'checked' : ''%>>
    <label for="two-stars">2 stars</label><br>

    <input type="checkbox" name="avgRating[]" id="three-stars"value="3"
    <%= query.avgRating && query.avgRating.includes('3')? 'checked' : ''%>>
    <label for="three-stars">3 stars</label><br>

    <input type="checkbox" name="avgRating[]" id="four-stars"value="4"
    <%= query.avgRating && query.avgRating.includes('4')? 'checked' : ''%>>
    <label for="four-stars">4 stars</label><br>

    <input type="checkbox" id="five-stars" name="avgRating[]" value="5"
    <%= query.avgRating && query.avgRating.includes('5')? 'checked' : ''%>>
    <label for="five-stars">5 stars</label><br>
  </fieldset>

  <div class="">
    <a href="/posts">Reset Form</a>
  </div>

  <input type="submit" name="" value="Submit">
</form>

<script type="text/javascript" src="/javascripts/use-my-location.js">
</script>
